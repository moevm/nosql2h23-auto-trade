doctype html
html
    head
        meta(charset='utf-8')
        title= title
        //adds= adds
        link(rel="stylesheet", href="/public/css/w3.css")
        link(rel="stylesheet", href="/public/css/auto-trade.css")
        link(rel="stylesheet", href="/public/css/review.css")
        link(rel="stylesheet", href="https://fonts.cdnfonts.com/css/julius-sans-one")
        link(rel="stylesheet" href='/font-awesome-4.7.0/css/font-awesome.min.css')
        script(src='/public/js/jquery.min.js')
        script(src="/public/js/auto-filter.js")


    body(style='background-color: #1F2833; font-size:30px;')
    include navbar.pug
    block content
        .review-create
            form(action=`/user/review/${id}`, method="POST")
                .review-create-name-exit
                    p Отзыв
                    a(href=`/user/${id}`)
                        i.fa.fa-times.fa-2x
                .review-create-mark
                    label Рейтинг:
                    input(type="number", min=0, max=5, placeholder="Введите оценку", name="mark")
                .review-create-text
                    textarea(placeholder="Введите текст отзыва", name="review")
                .review-create-btn
                    button(type="submit") Отправить отзыв